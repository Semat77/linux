#Napisz skrypt, ktory wypisze liczbe elementow zadanej tablicy 
#oraz wszystkie elementy tej tablicy 
#
tab=(pn wt sr czw pt sob nie)
echo "Liczba elementow w tablicy: ${#tab[@]}"
a=0
until [ $a -eq ${#tab[@]} ; do
        echo "Indeks: $a"
        echo "tab[$a]=${tab[$[a++]]}"
        echo "Indeks po: $a"
done
